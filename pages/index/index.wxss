/* pages/index/index.wxss */
/* 首页 */
.container {
  width: 100vw;
  height: calc(100vh - 168rpx);
  position: relative;
}

.con-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  opacity: 0.6;
}
.page-section-spacing{
  margin-top: 60rpx;
}
.con-scroll{
  height: 100%;

}
.scroll{
  white-space: nowrap;
  height: 100%;
}
.scroll .item{
  position: relative;
  padding: 0 8%;
  min-height: 240rpx;
  font-size:50rpx;
  display: flex;
  flex-direction: column;
  margin-top: 16rpx;
}
.item-startime,
.item-endtime{
  width: 50%;
  text-align: center;
  height: 60rpx;
}
.item-affair{
  width: 90%;
  margin: 20rpx auto;
  display: flex;
}
.item-affair>view{
  width: 50%;
  text-align: center;
  font-size: 38rpx;
}
.item-name{
  position: absolute;
  height: 80rpx;
  /* bottom: calc(50% - 40rpx); */
  bottom: 138rpx;
  font-size: 50rpx;
  font-family: '宋体';
  color: rgb(192, 0, 0);
}
.time{
  width: 2px;
  height: 100%;
  border-right: solid black 2px;
  position: absolute;
  left: calc(50% - 2px);
}

/* 答题 */
.question_cat {
  display: flex;
  width: 100%;
  justify-content: space-evenly;
  margin-top: auto;
  margin-bottom: auto;
}

.question {
  width: 100%;
  height: 100%;
  align-items: center;
  display: flex;
}

.question_cat>view {
  background-color: #e9e3e3;
  width: 200rpx;
  height: 400rpx;
  text-align: center;
  border-radius: 5%;
}

.question_cat>view text {
  font-size: 50rpx;
  font-family: '宋体';
  writing-mode: vertical-lr;
  display: inline-block;
  height: 100%;
}

/* 我的 */
.person {
  width: 100vw;
  height: 20vh;
}

.info {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  height: 100%;
  margin: 0 auto;
}

.person_information {
  display: flex;
  flex-direction: column;
}

.person_btn {
  text-align: center;
  line-height: 20vh;
}

.outer>view {
  margin-bottom: 20rpx;
}

.view_popup {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.view_popup view:last-child {
  margin-top: 6rpx;
}

.btn_popup button {
  display: inline-block;
  width: 300rpx;
  line-height: 88rpx;
}